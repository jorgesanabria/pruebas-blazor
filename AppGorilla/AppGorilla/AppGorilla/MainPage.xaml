<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppGorilla"
             x:Class="AppGorilla.MainPage">
    <Grid>
        <Image Source="24y4a814zy801.jpg" Aspect="AspectFill"/>
        <BoxView BackgroundColor="Black" Opacity=".4"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>
            <Label Text="The Store" Style="{StaticResource BigTiles}" />
            <Label Text="Login" Grid.Row="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="25" TextColor="White" FontAttributes="Italic"/>
            <Entry Placeholder="Username" Grid.Row="2" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" PlaceholderColor="White"/>
            <Entry Placeholder="Password" Grid.Row="3" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" PlaceholderColor="White"/>
            <Button Grid.Row="4" Text="Login" BackgroundColor="{StaticResource ButtonBackground}"/>
            <Image Source="{StaticResource LoginImage}" Grid.Row="5"/>
        </Grid>
    </Grid>

</ContentPage>
